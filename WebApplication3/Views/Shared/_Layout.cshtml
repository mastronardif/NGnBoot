<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("apps", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("vwModel", "myvm", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Ad Exchange", "rootAds", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("h Ads", "homelessAds", "Home", new { area = "" }, null)</li>
                    <li>
                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">Select a Campaign <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Homeless Ads</a></li>
                                <li><a href="#">Item II</a></li>
                                <li>@Html.ActionLink("Ad Exchange", "rootAds", "Home", new { area = "" }, null)</li>
                                <li><a href="#">Stickers</a></li>
                                <li><a href="#">Item V</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Other</a></li>
                            </ul>
                        </li>

                    <li>
                        <select class="form-control" id="AdCampaigns" onchange="location = this.options[this.selectedIndex].value;">
                            <option selected="selected" value="/Home/rootAds">select Campaign</option>
                            <option value="/Home/rootAds">5-9</option>
                            <option value="/Home/rootAds">rootAds</option>
                            <option value="/Home/rootAds">16-20</option>
                            <option value="/Home/rootAds">20+</option>
                        </select>
                    </li>

                    <li>@Html.ActionLink("html", "myhtml", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("datatables", "mydatatables", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("bootstrap", "mybootstrap", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("ng",        "myng", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("html5", "myng", "Home", new { area = "" }, null)</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Application</p>
        </footer>
    </div>

    @Scripts.Render("https://code.jquery.com/jquery-1.12.4.js")
    @Scripts.Render("https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
<script type="text/javascript">
  $(document).ready(function() {
      //alert("hello world");
      $('#AdCampaigns').change(function () {
          //alert($(this).val());
          //var selectedText = $(this).find("option:selected").value();
          //console.log(selectedText);
      });

      $(".dropdown-menu li a").click(function () {
          console.log('wtf');
          var selText = $(this).text();
          $(this).parents('.btn-group').find('.dropdown-toggle').html(selText + ' <span class="caret"></span>');
      });

    });

</script>
</html>
